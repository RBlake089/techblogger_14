<div class="">

{{#if loggedIn}}

  {{#each posts as |post| }}
  <a href="/getSinglePost/{{post.post_id}}">
  <div class="">

    <div class="">
        <div class="">
          <h2 class="">{{post.title}}</h2>
          <p class="">Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
        </div>
    </div>

    <div class="">
      <div>
        <p>{{post.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
  </a>

{{else}}

  {{#each posts as |post| }}
  <div class="">

    <div class="">
      <div class="">
        <h2 class="">{{post.title}}</h2>
        <p class="">Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
      </div>
    </div>

    <div class="">
      <div>
        <p>{{post.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{/if}}